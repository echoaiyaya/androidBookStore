<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Community">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/comTitle"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:background="@color/login_bgColorBlue"
            android:gravity="center_vertical|center_horizontal"
            android:text="Community"
            android:textColor="@color/login_bgText"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/comSoon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/comTitle"
            android:layout_marginTop="126dp"
            android:text="Coming Soon!"
            android:textAlignment="center"
            android:textColor="#3700b3"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/comText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/comSoon"
            android:layout_marginTop="3dp"
            android:text="Shop Again. Checkout our Books!"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="15sp" />

        <Button
            android:id="@+id/comBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="158dp"
            android:layout_marginBottom="336dp"
            android:background="#F0C14B"
            android:text="Home" />
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>