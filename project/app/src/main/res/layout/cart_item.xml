<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="5dp">

        <ImageView
            android:id="@+id/bookImage1"
            android:layout_width="100dp"
            android:layout_height="150dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="10dp"
            android:scaleType="fitXY"
            android:src="@drawable/book1" />

        <TextView
            android:id="@+id/bookTitle1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/bookImage1"
            android:text="Complete Canadian Curriculum Gr.4(Rev) Paperback â€“ June 1 2015"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/bookPrice1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/bookTitle1"
            android:layout_toRightOf="@+id/bookImage1"
            android:text="CDN$ 18.73"
            android:textColor="@color/deepRed"
            android:textSize="25sp" />

        <Button
            android:id="@+id/quantityBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/bookPrice1"
            android:layout_toRightOf="@id/bookImage1"
            android:text="Quantity: 1" />
    </RelativeLayout>
</LinearLayout>