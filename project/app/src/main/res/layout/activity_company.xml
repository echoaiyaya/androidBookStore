<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layoutDescription="@xml/activity_company_scene"
    android:background="@color/lightBlue"
    tools:context=".CompanyActivity">

    <LinearLayout
        android:id="@+id/categoryMenu"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:background="@color/login_bgColorWhite"
        android:clipChildren="false"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/bookShopBtn"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_gravity="bottom"
            android:layout_weight="1"
            app:srcCompat="@drawable/bookshop" />

        <ImageView
            android:id="@+id/commBtn"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_gravity="bottom"
            android:layout_weight="1"
            app:srcCompat="@drawable/community" />

        <ImageView
            android:id="@+id/bookShelfBtn"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_gravity="bottom"
            android:layout_weight="1"
            app:srcCompat="@drawable/main_btn" />

        <ImageView
            android:id="@+id/cartBtn"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_gravity="bottom"
            android:layout_weight="1"
            app:srcCompat="@drawable/carts" />

        <ImageView
            android:id="@+id/accountBtn"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_gravity="bottom"
            android:layout_weight="1"
            app:srcCompat="@drawable/account_click" />
    </LinearLayout>

    <TextView
        android:id="@+id/cartTitle"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:textSize="30sp"
        android:gravity="center_vertical|center_horizontal"
        android:text="About Us"
        android:background="@color/login_bgColorBlue"
        android:textColor="@color/login_bgText"
        />

    <androidx.cardview.widget.CardView
        android:id="@+id/aboutUsCard"
        android:layout_margin="10dp"
        android:layout_below="@id/cartTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_margin="10dp"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="30sp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:text="About Our Company"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:text="Our company's name is GOOOOBS.liajs dolifj alisdjj alsdkf joiaslk asdj lkia mlsi dnlk nalksdnoid "/>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/aboutPolicy"
        android:layout_margin="10dp"
        android:layout_below="@id/aboutUsCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_margin="10dp"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="30sp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:text="Our Policy"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="25sp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:text="About Return"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:text="You can return many items sold on Amazon. When you return an item, you may see different return options depending on the seller, item, or reason for return.
"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</RelativeLayout>